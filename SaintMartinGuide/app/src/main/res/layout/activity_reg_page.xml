<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Pick a Date" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="297dp"

        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:layout_below="@id/calendar"
        android:layout_marginTop="10dp"
        android:text="Choose how many day you will stay" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:layout_below="@id/spinner2"
        android:text="Choose Room type" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/spinner3"

        android:text="Fair Rate" />


    <TextView
        android:id="@+id/roomwanted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView6"
        android:text="Room wanted" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/roomwanted"

        />

    <TextView
        android:id="@+id/totalcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:layout_below="@id/spinner4"
        android:text="Total cost" />

    <Button
        android:id="@+id/subReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/totalcost"
        android:text="Submit" />


</RelativeLayout>